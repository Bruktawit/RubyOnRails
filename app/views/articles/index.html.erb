
<p id="notice"><%= notice %></p>

<h1 align="center">List Of Articles</h1>

<table align="center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'View Detail', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p align="center">
<%= link_to 'Create Article', new_article_path %>
</p>